# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                    controllers.Application.index
GET     /bible/                              controllers.Application.bible
GET     /chapter/:book/:chapter              controllers.Application.chapter(book: String, chapter: Int)
GET     /specification/:book/:chapter/:verse controllers.Application.specification(book: String, chapter: Int, verse: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                        controllers.Assets.at(path="/public", file)

    